<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="24dp">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Edit Hazard" android:textAppearance="?attr/textAppearanceHeadline6" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hazard Type" android:layout_marginTop="16dp"/>

    <Spinner android:id="@+id/spinner_hazard_type" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Directionality" android:layout_marginTop="16dp"/>

    <RadioGroup android:id="@+id/radio_group_directionality" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp">

        <RadioButton android:id="@+id/radio_one_way" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="One-way" />

        <RadioButton android:id="@+id/radio_two_way" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Two-way" />
    </RadioGroup>

</LinearLayout>
